exports.handler = async (event) => {
	
	const path = event.requestContext.http.path;
	const method = event.requestContext.http.method;
	
	if(path == "/hello" && method == "GET"){
		return {
			statusCode: 200,
			body: JSON.stingify({statusCode: 200, message: "Hello from Lambda"})
		}
	}
	else{
		return {
			statusCode: 400,
			body: JSON.stingify({statusCode: 400, message: "Bad request syntax or unsupported method. Request path: " + path + ". HTTP method: " + method})
		}
	}
	
    /*const response = {
        statusCode: 200,
        body: JSON.stringify(path),
    };
	
    return response;*/
};
